@model IEnumerable<prjMvcCoreDemo.ViewModels.CProductViewModel>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="CartView">檢視購物車</a>
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            序
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FPrice)
        </th>
        <th></th>
    </tr>
    @{
        int count = 0;

        foreach (var item in Model)
        {
            count++;
            <tr>
                <td>
                    @count
                </td>
                <td>
                    <div>
                        <img src="~/images/@item.FImagepath" width="200" height="150" />
                    </div>
                    <h2>@Html.DisplayFor(modelItem => item.FName)</h2>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FPrice)
                </td>
                <td>
                    @Html.ActionLink("加入購物車", "AddToCart", new { id = item.FId, @class = "container text-center" })
                </td>
            </tr>
        }
    }
</table>

